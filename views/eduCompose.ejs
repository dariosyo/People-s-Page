
<%- include("partials/header"); -%>
    <h2>Compose</h2>
    <form class="form-main" action="/eduCompose" method="post">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle">
        <label>Date</label> <br/>
        <input type="text" id="postDate" name="postDate" value="<%=currentDay%>"><br />
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button" value="educational">Publish</button>
    </form>

<%- include("partials/footer"); -%>
