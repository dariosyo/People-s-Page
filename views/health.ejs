<%- include("partials/header"); -%>


<h2>Health</h2>
<a href="/healthCompose" class="toolsOther">Compose</a>

<p><%= startingContent %></p>

<%  newListItems.forEach(function(post){ %>

  <h2><%=post.title%></h2>
  <p class="toolsOther"><%=post.date%></p>
  <form  action="/healthDelete" method="post">

    <div class="item">
      <button type="submit" name="checkbox" value="<%=post._id%>" onchange="this.form.submit()" class="chkBtnDelete">Delete</button>

    </div>
  </form>


  <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
  </p>


  <% }) %>

<%- include("partials/footer"); -%>
